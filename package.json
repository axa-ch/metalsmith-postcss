{
  "name": "@metalsmith/postcss",
  "version": "4.2.0",
  "description": "A Metalsmith plugin that sends your CSS through any PostCSS plugins.",
  "keywords": [
    "metalsmith",
    "metalsmith-plugin",
    "postcss",
    "css",
    "preprocessor"
  ],
  "homepage": "https://github.com/metalsmith/postcss",
  "bugs": {
    "url": "https://github.com/metalsmith/postcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/metalsmith/postcss"
  },
  "license": "MIT",
  "author": "Kevin Van Lierde (https://webketje.com)",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "index.js",
    "CHANGELOG.md"
  ],
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it .",
    "test": "nyc mocha",
    "test:e2e": "npm test && serve -l 3000 test/fixtures"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.0.1",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "metalsmith": "^2.1.0",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.6",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "release-it": "^14.12.4",
    "serve": "^13.0.2"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1",
    "postcss": "^5.0.4 || ^6.0.0 || ^7.0.0 || ^8.0.0"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
